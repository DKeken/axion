{
  "name": "@axion/deployment-service",
  "version": "1.0.0",
  "description": "Deployment Service - управление деплоями проектов",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --env-file=.env src/main.ts",
    "start": "node dist/main.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "migrate:generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "migrate:push": "drizzle-kit push"
  },
  "dependencies": {
    "@axion/better-auth": "workspace:*",
    "@axion/contracts": "workspace:*",
    "@axion/database": "workspace:*",
    "@axion/nestjs-common": "workspace:*",
    "@axion/shared": "workspace:*",
    "@nestjs/common": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/microservices": "catalog:",
    "@nestjs/platform-express": "catalog:",
    "@nestjs/swagger": "catalog:",
    "@nestjs/bullmq": "^10.0.1",
    "bullmq": "catalog:",
    "drizzle-orm": "catalog:",
    "js-yaml": "^4.1.1",
    "kafkajs": "catalog:",
    "postgres": "catalog:",
    "zod": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:",
    "class-validator": "catalog:",
    "class-transformer": "catalog:",
    "@nestia/core": "catalog:",
    "typia": "catalog:"
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  }
}

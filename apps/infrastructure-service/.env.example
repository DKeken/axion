# Database (отдельная БД для infrastructure-service)
DATABASE_URL=postgresql://axion:axion_password@localhost:5435/axion_infrastructure

# Kafka (Event Bus для CQRS и Event Sourcing)
KAFKA_BROKERS=localhost:9092
# Suppress KafkaJS partitioner warning (using default partitioner)
KAFKAJS_NO_PARTITIONER_WARNING=1

REDIS_URL=redis://:axion_keydb_password@localhost:6379

# Service
PORT=3004
NODE_ENV=development

# SSH Encryption (REQUIRED for production)
# Master key для шифрования SSH ключей и паролей перед сохранением в БД
# Должен быть минимум 32 байта (256 бит) для AES-256
# В production ОБЯЗАТЕЛЬНО использовать длинный случайный ключ
# Пример генерации: openssl rand -base64 32
SSH_ENCRYPTION_MASTER_KEY=your-secret-master-key-minimum-32-bytes-for-production

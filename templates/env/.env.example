# Axion Stack Service Environment Template
# Copy this file to .env and fill in the values

# Service Configuration
PORT=3000
NODE_ENV=development

# Database
POSTGRES_URL=postgresql://user:password@localhost:5432/axion_dev
DATABASE_URL=${POSTGRES_URL}

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_SASL_MECHANISM=scram-sha-512
KAFKAJS_NO_PARTITIONER_WARNING=1

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-change-in-production
BETTER_AUTH_URL=http://localhost:3000

# Service-specific
# GRAPH_SERVICE_PORT=3001
# CODEGEN_SERVICE_PORT=3002
# DEPLOYMENT_SERVICE_PORT=3005
# INFRASTRUCTURE_SERVICE_PORT=3004

# OpenRouter (for Codegen Service)
OPENROUTER_API_KEY=

# Optional: Logging
LOG_LEVEL=info

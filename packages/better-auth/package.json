{
  "name": "@axion/better-auth",
  "version": "1.0.0",
  "description": "Better Auth integration package for Axion Stack",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./nestjs": {
      "types": "./src/nestjs/index.ts",
      "default": "./src/nestjs/index.ts"
    },
    "./ui": {
      "types": "./src/ui/index.ts",
      "default": "./src/ui/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@axion/database": "workspace:*",
    "@axion/contracts": "workspace:*",
    "@thallesp/nestjs-better-auth": "^1.0.0",
    "better-auth": "^1.3.8",
    "drizzle-orm": "catalog:"
  },
  "peerDependencies": {
    "better-auth-ui": "^3.2.6"
  },
  "peerDependenciesMeta": {
    "better-auth-ui": {
      "optional": true
    }
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "^9",
    "typescript": "catalog:"
  }
}

{
  "name": "@axion/shared",
  "version": "1.0.0",
  "description": "Shared utilities and helpers for Axion Stack microservices",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./helpers": {
      "types": "./src/helpers/index.ts",
      "default": "./src/helpers/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    },
    "./nest": {
      "types": "./src/nest.ts",
      "default": "./src/nest.ts"
    }
  },
  "typesVersions": {
    "*": {
      "nest": [
        "./src/nest.ts"
      ],
      "helpers": [
        "./src/helpers/index.ts"
      ],
      "utils": [
        "./src/utils/index.ts"
      ]
    }
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@axion/contracts": "workspace:*",
    "@nestjs/microservices": "catalog:"
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "^9",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@nestjs/microservices": "catalog:",
    "kafkajs": "catalog:"
  }
}

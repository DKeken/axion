{
  "name": "@axion/shared",
  "version": "1.0.0",
  "description": "Shared utilities and helpers for Axion Stack microservices",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./helpers": {
      "types": "./src/helpers/index.ts",
      "default": "./src/helpers/index.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@axion/contracts": "workspace:*",
    "@nestjs/microservices": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@nestjs/microservices": "catalog:",
    "kafkajs": "catalog:"
  }
}

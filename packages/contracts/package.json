{
  "name": "@axion/contracts",
  "version": "1.0.0",
  "description": "Protobuf contracts for Axion Control Plane services",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "scripts": {
    "generate": "buf dep update && buf generate",
    "lint": "buf lint",
    "breaking": "buf breaking --against '.git#branch=main'",
    "format": "buf format -w",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf generated"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "@bufbuild/protovalidate": "^0.6.0",
    "@connectrpc/connect": "^2.0.0"
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@bufbuild/buf": "^1.47.2",
    "@bufbuild/protoc-gen-es": "^2.2.2",
    "@types/node": "catalog:",
    "eslint": "^9",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@nestjs/microservices": "catalog:"
  }
}

{
  "name": "@axion/frontend-api",
  "version": "0.1.0",
  "description": "Typed frontend HTTP client and TanStack Query bindings for Axion Stack.",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@axion/contracts": "workspace:*",
    "@axion/shared": "workspace:*",
    "@tanstack/query-core": "^5.90.12",
    "@tanstack/react-query": "^5.90.12",
    "ky": "^1.14.1"
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "^9",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}

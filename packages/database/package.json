{
  "name": "@axion/database",
  "version": "1.0.0",
  "description": "Database connection and setup utilities for Axion Stack",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./postgres": {
      "types": "./src/postgres/index.ts",
      "default": "./src/postgres/index.ts"
    }
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json --skipLibCheck",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "postgres": "catalog:"
  },
  "devDependencies": {
    "@axion-stack/eslint-config": "workspace:*",
    "@axion-stack/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "^9",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@axion/contracts": "workspace:*"
  }
}
